---
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/back.scss";
---

<BaseLayout>
  <section class="p-back-fv">
    <div class="l-outer p-back-fv__wrapper">
      <div class="l-inner p-back-fv__inner">
        <div class="p-back-fv__body">
          <div class="profile">
            <h1 class="profile__title" lang="en">web development & design</h1>
            <div class="profile__body">
              <div class="profile__info">
                <p class="profile__name" lang="ja">
                  <span class="profile__kana">さだときかいせい</span>
                  <span class="profile__kanji">定時海聖</span>
                </p>
                <p class="profile__job" lang="jp">
                  Developer,<br />based in Hyogo, Japan
                </p>
              </div>
              <div class="profile__image" id="profilePlane">
                <img src="/image/image01.png" alt="" />
              </div>
            </div>
          </div>
        </div>
        <div class="p-back-fv__footer">
          <div class="fv-footer-thanks">
            <p class="fv-footer-thanks__text" lang="ja">多謝</p>
          </div>
          <div class="fv-footer-info">
            <h2 class="fv-footer-info__title" lang="en">information</h2>
            <ul class="fv-footer-info__list">
              <li class="fv-footer-info__item">
                <span lang="en">Mail:</span>
                <a lang="en" href="mailto:k25ts09@outlook.jp"
                  >k25ts09@outlook.jp</a
                >
              </li>
              <li class="fv-footer-info__item">
                <span lang="en">Instagram:</span>
                <a
                  lang="en"
                  href="https://www.instagram.com/kaiseee_i_j/"
                  target="_blank">@kaiseee_i_j</a
                >
              </li>
              <li class="fv-footer-info__item">
                <span lang="en">Portfolio:</span>
                <a
                  lang="en"
                  href="https://kaiseisadatoki-v3.vercel.app"
                  target="_blank">https://kaiseisadatoki-v3.vercel.app</a
                >
              </li>
            </ul>
          </div>
        </div>

        <div class="p-back-fv__link">
          <a class="js-link" href="/" lang="ja" data-to="/">(此処押下)</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
